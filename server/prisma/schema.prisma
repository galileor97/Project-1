datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  balance      Float?
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  name         String
  roster       User[]
  seasonPoints Int
  updatedAt    DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  team      Team[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Scrim {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  team1     Team
  team2     Team
  updatedAt DateTime @updatedAt
}